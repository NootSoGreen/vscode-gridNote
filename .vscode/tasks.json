// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "buildWatch",
            "label": "build",
            "isBackground": true,
            "problemMatcher": {
                "owner": "vite",
                "pattern": [
                    {
                        "regexp": "^(ERROR|WARNING) in (.*) (\\d+):(\\d+)\\s(.*)$",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*build started.*",
                    "endsPattern": ".*built in.*"
                }
            }
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["build"]
        }
    ]
}
