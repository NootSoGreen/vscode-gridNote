{
    "name": "grid-note-vscode-extension",
    "displayName": "Grid Note",
    "version": "0.2.2",
    "description": "Note editor with grid layout extension for VS Code",
    "license": "GPL-3.0-or-later",
    "author": "MattWasHere",
    "publisher": "MattWasHere",
    "icon": "icons/gridNote-icon.png",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/NootSoGreen/vscode-gridNote"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "note"
    ],
    "main": "./out/extension/extension.js",
    "activationEvents": [],
    "contributes": {
        "customEditors": [
            {
                "viewType": "gridNote.gdNote",
                "displayName": "Grid Note",
                "selector": [
                    {
                        "filenamePattern": "*.gdNote"
                    }
                ]
            }
        ],
        "languages": [
            {
                "id": "gridNote",
                "extensions": [
                    ".gdNote"
                ],
                "icon": {
                    "dark": "icons/gridNote-icon.svg",
                    "light": "icons/gridNote-icon.svg"
                }
            }
        ],
        "commands": [
            {
                "command": "gridNote.toggleSettings",
                "title": "Toggle Grid Note Settings",
                "category": "Grid Note",
                "icon": "$(settings-gear)"
            },
            {
                "command": "gridNote.gravityModeOn",
                "title": "Notes To Top",
                "category": "Grid Note",
                "icon": "$(fold-up)"
            },
            {
                "command": "gridNote.gravityModeOff",
                "title": "Free Move Notes",
                "category": "Grid Note",
                "icon": "$(move)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "gridNote.toggleSettings",
                    "when": "activeCustomEditorId == 'gridNote.gdNote'",
                    "group": "navigation@1"
                },
                {
                    "command": "gridNote.gravityModeOn",
                    "when": "activeCustomEditorId == 'gridNote.gdNote' && gravityOn == false",
                    "group": "navigation@0"
                },
                {
                    "command": "gridNote.gravityModeOff",
                    "when": "activeCustomEditorId == 'gridNote.gdNote' && gravityOn == true",
                    "group": "navigation@0"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build & npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint",
        "watch": "tsc -w -p ./",
        "dev": "vite",
        "build": "vite build",
        "buildWatch": "vite build --watch",
        "preview": "vite preview",
        "format": "prettier --write .",
        "pkg": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@types/node": "^24",
        "@types/vscode": "^1.74.0",
        "@vscode/vsce": "^3.7.0",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "svelte": "^5.43.8",
        "typescript": "^5.9.3",
        "vite": "^7.2.2"
    },
    "dependencies": {
        "@vscode/codicons": "0.0.42",
        "dompurify": "^3.3.0",
        "jsonc-parser": "^3.3.1",
        "katex": "^0.16.25",
        "marked": "^17.0.0",
        "marked-base-url": "^1.1.8"
    }
}
