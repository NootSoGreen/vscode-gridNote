{
    "name": "grid-note-vscode-extension",
    "displayName": "Grid Note",
    "version": "0.0.1",
    "description": "Note editor with grid layout extension for VS Code",
    "license": "GPL-3.0-or-later",
    "author": "MattWasHere",
    "publisher": "MattWasHere",
    "icon": "icons/gridNote-icon.png",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/NootSoGreen/vscode-gridNote"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "note"
    ],
    "main": "./out/extension/extension.js",
    "activationEvents": [],
    "contributes": {
        "customEditors": [
            {
                "viewType": "gridNote.gdNote",
                "displayName": "Grid Note",
                "selector": [
                    {
                        "filenamePattern": "*.gdNote"
                    }
                ]
            }
        ],
        "languages": [
            {
                "id": "gridNote",
                "extensions": [
                    ".gdNote"
                ],
                "icon": {
                    "dark": "icons/gridNote-icon.svg",
                    "light": "icons/gridNote-icon.svg"
                }
            }
        ],
        "commands": [
            {
                "command": "gridNote.toggleSettings",
                "title": "Toggle Grid Note Settings",
                "category": "Grid Note",
                "icon": "$(settings-gear)"
            },
            {
                "command": "gridNote.gravityModeOn",
                "title": "Notes To Top",
                "category": "Grid Note",
                "icon": "$(fold-up)"
            },
            {
                "command": "gridNote.gravityModeOff",
                "title": "Free Move Notes",
                "category": "Grid Note",
                "icon": "$(move)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "gridNote.toggleSettings",
                    "when": "activeCustomEditorId == 'gridNote.gdNote'",
                    "group": "navigation@1"
                },
                {
                    "command": "gridNote.gravityModeOn",
                    "when": "activeCustomEditorId == 'gridNote.gdNote' && gravityOn == false",
                    "group": "navigation@0"
                },
                {
                    "command": "gridNote.gravityModeOff",
                    "when": "activeCustomEditorId == 'gridNote.gdNote' && gravityOn == true",
                    "group": "navigation@0"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile-final",
        "compile": "conc \"rollup -c -w\" \"tsc --build ./tsconfig.node.json -w\"",
        "compile-final": "rollup -c && tsc --build ./tsconfig.node.json",
        "watch": "tsc -w -p ./",
        "lint": "eslint",
        "pkg": "vsce package"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-terser": "^0.4.4",
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "@types/node": "^20",
        "@types/vscode": "^1.73.0",
        "concurrently": "^9.2.1",
        "prettier": "^3.4.2",
        "prettier-plugin-svelte": "^3.3.2",
        "rollup": "^4.50.2",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-svelte": "^7.2.3",
        "svelte": "^5.38.10",
        "svelte-preprocess": "^6.0.3",
        "typescript": "^5.8.2",
        "vite": "^6.0.5"
    },
    "dependencies": {
        "@vscode/codicons": "0.0.20",
        "@vscode/vsce": "^3.3.2",
        "dompurify": "^3.2.3",
        "jsonc-parser": "^3.3.1",
        "marked": "^15.0.5"
    }
}
