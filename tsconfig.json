{
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "target": "ESNext",
        "verbatimModuleSyntax": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "moduleResolution": "bundler",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*", "src/main.ts"],
    "exclude": ["node_modules/*", "public/*", "src/extension/**"]
}
